import sys
klass1 = int(input("Введіть кількість учнів у першому класі "))
klass2 = int(input("Введіть кількість учнів у другому класі "))
klass3 = int(input("Введіть кількість учнів у третьому класі "))
parta1 = klass1 // 2
m = klass1 % 2
print(m)
if m == 1:
    parta1 = parta1 + 1
parta2 = klass2 // 2
m = klass2 % 2
print(m)
if m == 1:
    parta2 = parta2 + 1
parta3 = klass3 // 2
m = klass3 % 2
print(m)
if m == 1:
    parta3 = parta3 + 1
print("Необхідна кількість парт для закупівлі: ", parta1 + parta2 + parta3)